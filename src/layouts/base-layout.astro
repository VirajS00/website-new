---
import Menu from "../components/menu.astro";
import "../styles/global.scss";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<html lang='en'>
	<head>
		<meta charset='utf-8' />
		<link rel='icon' type='image/svg+xml' href='/favicon.svg' />
		<meta name='viewport' content='width=device-width' />
		<title>{title}</title>
	</head>
	<body>
		<main>
			<Menu />
			<slot />
		</main>
	</body>
</html>
