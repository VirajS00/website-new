---
import { Picture } from "@astrojs/image/components";
import HeroImage from "../../assets/hero-image.jpg";
import Section from "../general/section.astro";
---

<Section>
	<div class='container'>
		<div class='text-block'>
			<h1>Hi, My name is Viraj</h1>
			<p>
				I'm currently working as a frontend developer, I'm also a passionate
				photographer who loves nature and macro photography and I studied
				cinematography in college.
			</p>
		</div>
		<div class='bg-img'>
			<Picture
				src={HeroImage}
				widths={[1080]}
				alt='Hero Image'
				formats={["avif", "jpg", "webp"]}
				aspectRatio='3:4'
			/>
			<div class='overlay' aria-hidden='true'></div>
		</div>
	</div>
</Section>

<style lang='scss'>
	.container {
		display: grid;
		height: 100%;
		grid-template-rows: repeat(2, 1fr);
		height: calc(100vh - 100px);

		@media screen and (min-width: 600px) {
			grid-template-columns: repeat(2, 1fr);
			align-items: center;
		}
	}

	.text-block {
		padding-inline: 2.5rem;
		justify-self: end;

		h1 {
			font-size: clamp(2rem, 8vw, 4rem);
		}

		p {
			color: #707070;
		}

		@media screen and (min-width: 600px) {
			padding-inline: 4rem;
			max-width: 80ch;
		}
	}

	.bg-img {
		position: relative;
		bottom: 0;
		user-select: none;

		img {
			top: 0;
			left: 0;
			height: 100%;
			width: 100%;
			object-fit: cover;
			position: absolute;
		}

		.overlay {
			position: absolute;
			top: 0;
			left: 0;
			height: 80%;
			width: 100%;
			background-image: linear-gradient(#000, transparent);

			@media screen and (min-width: 600px) {
				background-image: linear-gradient(90deg, #000, transparent),
					linear-gradient(0deg, #000 50px, transparent 300px);
				height: 100%;
			}
		}

		@media screen and (min-width: 600px) {
			height: calc(100vh + 100px);
			margin-top: -200px;
		}
	}
</style>
