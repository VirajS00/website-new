---
import { Icon } from "astro-icon";
import type { MenuItem } from "../types/menu-item";
import classNames from "classnames";

interface Props {
	dropdownItems: MenuItem[];
}

const currentPath = Astro.url.pathname;

const { dropdownItems } = Astro.props;
---

<div class='container'>
	<button class='dropdown-btn'>
		<slot />
		<Icon name='mdi:arrow-down-drop' size={22} id='arrow-icon' />
	</button>
	<ul class='list hide'>
		{
			dropdownItems.map((item) => (
				<li>
					<a
						href={item.link}
						class={classNames({ active: item.link === currentPath })}>
						{item.label}
					</a>
				</li>
			))
		}
	</ul>
</div>

<script lang='typescript'>
	const button = document.querySelector(".dropdown-btn");
	const list = document.querySelector(".list");

	button.addEventListener("click", () => {
		list.classList.toggle("hide");

		if (list.classList.contains("hide")) {
			document.querySelector("#arrow-icon").style.transform = "rotate(0deg)";
		} else {
			document.querySelector("#arrow-icon").style.transform = "rotate(180deg)";
		}
	});

	window.addEventListener("click", (e) => {
		if (e.target !== list && e.target !== button) {
			list.classList.add("hide");
		}

		if (list.classList.contains("hide")) {
			document.querySelector("#arrow-icon").style.transform = "rotate(0deg)";
		} else {
			document.querySelector("#arrow-icon").style.transform = "rotate(180deg)";
		}
	});

	window.addEventListener("keyup", (e) => {
		if (e.key === "Escape" && !list.classList.contains("hide")) {
			list.classList.add("hide");
		}

		if (list.classList.contains("hide")) {
			document.querySelector("#arrow-icon").style.transform = "rotate(0deg)";
		} else {
			document.querySelector("#arrow-icon").style.transform = "rotate(180deg)";
		}
	});
</script>

<style lang='scss'>
	.dropdown-btn {
		border: 1px solid #fff;
		color: #fff;
		appearance: none;
		background-color: #000;
		padding: 0.5rem 1.2rem;
		border-radius: 100vh;
		width: 100%;
		text-align: left;
		display: flex;
		justify-content: space-between;
		align-items: center;
		cursor: pointer;
	}

	.container {
		position: relative;
		width: 220px;

		.list {
			position: absolute;
			top: calc(100% + 0.5rem);
			width: 100%;
			border: 1px solid #fff;
			background-color: #000;
			border-radius: 0.5em;
			list-style: none;
			margin: 0;
			padding-block: 1em;
			padding-inline: 0;
			max-height: 500px;
			overflow-y: auto;
			z-index: 1000;

			&::-webkit-scrollbar {
				width: 0.5rem;
				height: 0.5rem;
			}

			&::-webkit-scrollbar-track {
				background-color: transparent;
			}

			&::-webkit-scrollbar-thumb {
				border: 1px solid transparent;
				border-radius: 10px;
				background-color: #8b8b8b;
				background-clip: content-box;
				border-left-width: 2px;
				border-right-width: 2px;

				&:hover {
					background-color: #7c7c7c;
				}
			}

			&.hide {
				display: none;
			}

			li {
				padding: 0;

				a {
					text-decoration: none !important;
					display: inline-block;
					width: 100%;
					padding-block: 0.7em;
					padding-inline: 1rem;
					font-size: 0.875rem;

					&.active {
						background-color: #212121;
					}

					&:hover,
					&:focus-visible {
						background-color: #2c2c2c;
					}
				}
			}
		}
	}
</style>
