---
import { Picture } from "@astrojs/image/components";
import Card from "./card.astro";

interface Props {
	imageUrl: string;
	imageAlt: string;
	link: string;
	aspectRatio?: number | `${number}:${number}`;
	gradientColor1?: string;
	gradientColor2?: string;
	height?: number;
}

const {
	imageUrl,
	imageAlt,
	link,
	gradientColor1,
	gradientColor2,
	aspectRatio,
	height = 420,
} = Astro.props;
---

<Card
	gradientColor2={gradientColor2}
	gradientColor1={gradientColor1}
	link={link}
	height={height}
>
	<div class='explore-card'>
		<div class='img-cont' aria-hidden='true'>
			<div class='img-blur-overlay'></div>
			<Picture
				src={imageUrl}
				class='img-bg'
				widths={[400]}
				formats={["avif", "webp", "jpg"]}
				alt={imageAlt}
				aspectRatio={aspectRatio}
			/>
		</div>
		<div class='content'>
			<div class='img-main-cont'>
				<Picture
					src={imageUrl}
					alt={imageAlt}
					widths={[400]}
					class='img-main'
					formats={["avif", "webp", "jpg"]}
					aspectRatio={aspectRatio}
				/>
			</div>
			<div class='text'>
				<slot />
			</div>
		</div>
	</div>
</Card>

<style lang='scss'>
	.explore-card {
		position: relative;
		height: calc(100% + 1rem);
		width: calc(100% + 3rem);
		margin-top: -0.5rem;
		margin-left: -1.5rem;
		background-color: #000;
		overflow: hidden;

		.content {
			isolation: isolate;
			display: grid;
			grid-template-rows: 250px 1fr;
			z-index: 2;
			height: 100%;

			.text {
				padding: 1rem 1.2rem;
			}
		}

		.img-main-cont {
			top: 0;
			left: 0;
			height: 100%;
			overflow: hidden;
		}

		.img-main {
			top: 0;
			left: 0;
			height: 100%;
			object-fit: cover;
			transform: scale(1);
			transition: transform 300ms ease;
		}

		.img-cont {
			position: absolute;
			top: 0;
			left: 0;
			width: 100%;
			height: 100%;
			z-index: 0;

			.img-bg {
				position: absolute;
				top: 0%;
				left: 0%;
				width: 100%;
				height: 100%;
				transform: scale(2);
			}

			.img-blur-overlay {
				background-color: rgb(0 0 0 / 0.85);
				backdrop-filter: blur(8px);
				position: absolute;
				top: 0%;
				left: 0%;
				width: 100%;
				height: 100%;
				z-index: 1;
			}
		}

		&:hover .img-main {
			transform: scale(1.05);
		}
	}
</style>
