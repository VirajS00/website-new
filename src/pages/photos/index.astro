---
import BasrLayout from "../../layouts/base-layout.astro";
import { Picture } from "@astrojs/image/components";
---

<BasrLayout title='Photos'>
    <div class='content'>
        <div class='title-container'>
            <h1>Photos</h1>
            <!-- <Dropdown dropdownItems={categoriesDropDownItems}>
				{FilmCategories[cat as never]}
			</Dropdown> -->
        </div>
        <div class='images-container'>
            <div class='img-cont'>
                <a href=''>
                    <Picture
                        src='https://c1.staticflickr.com/1/322/31905679860_142bd93e5a_n.jpg'
                        alt='ddd'
                        widths={[500]}
                        aspectRatio='3:2'
                    />
                    <div class='image-details'>ojdjdooj</div>
                </a>
            </div>
        </div>
    </div>
</BasrLayout>

<style>
    .title-container {
        max-width: 1300px;
        padding: 2rem;
        margin: 0 auto;

        h1 {
            margin: 0;
            margin-block-end: 1rem;
            padding: 0;
        }

        @media screen and (min-width: 600px) {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-block-end: 0;
            padding-block: 1.5em;
        }
    }

    .images-container {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(400px, 1fr));
        max-width: 1300px;
        padding: 2rem;
        margin: 0 auto;
    }

    .img-cont {
        position: relative;
        height: 300px;
        object-fit: cover;
        overflow: hidden;
        border-radius: 0.5em;

        img {
            position: absolute;
            height: 100%;
            width: 100%;
        }

        .image-details {
            position: absolute;
            height: 100%;
            width: 100%;
            background-color: rgb(0 0 0 / 0.6);
            opacity: 0;
            pointer-events: none;
            transition: opacity 250ms ease;
            padding: 1em;
        }

        &:hover .image-details {
            opacity: 1;
            pointer-events: fill;
        }
    }
</style>
